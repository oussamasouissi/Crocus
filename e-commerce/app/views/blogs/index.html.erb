                  <p><%= link_to(categorie.nomCategorie,  filterBlog_categories_path(categorie.id)) %>(<%=@articles.countCategorieArticle(categorie) %>)</p>

              </li>
              <%end %>
            </ul>
          </aside>

          <aside class="single_sidebar_widget popular_post_widget">

            <h3 class="widget_title">Recent Post</h3>
            <% @recentArticle.each do |article| %>
            <div class="media post_item">
              <%= image_tag(article.image , :class => "card-img rounded-0") if article.image.attached? %>
              <div class="media-body">
                <h3 style="color: #0b0c0d" ><%= link_to article.nom, blog_path(article)%></h3>
                <%=article.created_at.strftime("%d-%B-%Y") %>
              </div>
            </div>
              <%end %>

          </aside>






          <aside class="single_sidebar_widget newsletter_widget">
            <h4 class="widget_title">Newsletter</h4>

            <form action="#">
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Enter email" required>
              </div>
              <button class="main_btn rounded-0 w-100" type="submit">Subscribe</button>
            </form>
          </aside>
