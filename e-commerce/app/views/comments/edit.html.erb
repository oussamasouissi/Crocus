<%= form_with(model: [@produit, @comment], local: true) do |form| %>
   <div class="form-group">
    <h1>Editer Commentaire :</h1>
   <%= form.label :rate, class: "rating" %><br>
    <%= form.text_field :rate, class: "rating form-control"%>
  </div>


  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>

      <div class="actions">
        <%= form.submit "Ajouter" %>
      </div>
<% end %>